# Frontend Auth.js configuration

# Same secret as backend AUTH_SECRET
AUTH_SECRET=GENERATE_A_LONG_SECRET

# Public URL where this frontend is reachable (e.g., http://localhost:3000)
AUTH_URL=http://localhost:3000

# Backend API base URL (e.g., http://localhost:3001 or https://api.example.com)
BACKEND_API_URL=http://localhost:3001

# Public URL for backend (used by the browser when calling APIs)
NEXT_PUBLIC_BACKEND_URL=http://localhost:3001

# Secret shared with backend adapter endpoints
ADAPTER_SECRET=ANOTHER_LONG_SECRET

# OAuth credentials
AUTH_GOOGLE_ID=YOUR_GOOGLE_CLIENT_ID
AUTH_GOOGLE_SECRET=YOUR_GOOGLE_CLIENT_SECRET
AUTH_GITHUB_ID=YOUR_GITHUB_CLIENT_ID
AUTH_GITHUB_SECRET=YOUR_GITHUB_CLIENT_SECRET

# Optional aliases that some tutorials still reference
NEXTAUTH_SECRET=GENERATE_A_LONG_SECRET
NEXTAUTH_URL=http://localhost:3000
GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID
GOOGLE_CLIENT_SECRET=YOUR_GOOGLE_CLIENT_SECRET
